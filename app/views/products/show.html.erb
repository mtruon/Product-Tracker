<div class="container-md" style="max-width: 500px">
  <div class="container-md shadow-sm px-5 py-5 border bg-white rounded">

    <h5><%= @product.name %></h5>
    <table class="table">
      <tr>
        <td>Url</td>
        <td>
          <input type="text" value="<%= @product.url %>" style="width: 100%" readonly>
        </td>
      </tr>
      <tr>
        <td>Notes</td>
        <td>
          <textarea style="width: 100%; height: 100%;" readonly><%= @product.notes %></textarea>
        </td>
    </table>
  </div>
</div>
