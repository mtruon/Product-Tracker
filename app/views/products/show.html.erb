<div class="container-md" style="max-width: 500px">
  <div class="container-md shadow-lg p-5  border bg-white rounded">
    <div class="row">
      <h5><%= @product.name %></h5>
      <table class="table">
        <tr>
          <td>Url</td>
          <td>
            <input type="text" value="<%= @product.url %>" style="width: 100%" readonly>
          </td>
        </tr>
        <tr>
          <td>Notes</td>
          <td>
            <textarea style="width: 100%; height: 100%;" readonly><%= @product.notes %></textarea>
          </td>
        </tr>
      </table> 
    </div>
    <div class="row">
      <div class="col-2">
        <%= button_to "Edit", {action: "edit", type: "button"},
                            {method: "get", class: "btn btn-secondary"} %>
      </div>
      <div class="col-2">
        <%= button_to 'Destroy', 
          product_path(@product), method: :delete, data: { confirm: "Are you sure?" },
          class: "btn btn-secondary" %>
      </div>
    </div>
    
</div>
