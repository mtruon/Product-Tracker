<%= form_with model: @product, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, type: "label" %>
      <%= form.text_field :name, type: "text", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :url, type: "label" %>
      <%= form.text_field :name, type: "text", class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_area :notes, 
                         type: "text", 
                         class: "form-control", 
                         style: "width: 100%",
                         placeholder: "Looking for a good deal" %>
    </div>
    <%= form.submit type: "button", class: "btn btn-primary" %>
<% end %>
